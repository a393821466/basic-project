.move_bottom-enter, .move_bottom-leave-active
  opacity 0
.move_bottom-enter-active, .move_bottom-leave-active
  transition opacity .4s
.page-move-enter, .page-move-leave-active
  transform translate(0, 100%)
.page-move-enter-active, .page-move-leave-active
  transition transform 0.3s

.password_Mask
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  z-index 5555
  background rgba(0, 0, 0, 0.3)
  .pay-tool
    position absolute
    bottom 0
    left 0
    height 420px
    width 100%
    background-color #fff
    overflow hidden
    .close_password
      width 40px
      height 40px
      text-align center
      display block
      position relative
      &:before
        content ''
        width 26px
        height 1px
        position absolute
        left 5px
        top 18px
        background #ccc
        transform rotate(45deg)
      &:after
        content ''
        width 26px
        height 1px
        position absolute
        left 5px
        top 18px
        background #ccc
        transform rotate(-45deg)
    &-title
      width 100%
      height 50px
      line-height 50px
      text-align center
      overflow hidden
      .icon
        float left
      strong
        font-size 16px
        color #999
    &-content
      .pay-tool-inputs
        width 80%
        height 42px
        margin 6px auto 0
        border 1px solid #b9b9b9
        display flex
        .item
          width 100%
          height 42px
          border-right 1px solid #b9b9b9
          line-height 42px
          text-align center
          &:last-child
            border-right none
          .icon_dot
            display inline-block
            width 10px
            height 10px
            background #666
            border-radius 50%
            background-size cover
      .pay-tool-link
        padding 10px 26px 0
        text-align right
        .link
          font-size 13px
          color #999
    .pay-tool-keyboard
      position absolute
      left 0
      bottom 0
      width 100%
      ul
        width 100%
        display flex
        flex-wrap wrap
        li
          width 33%
          height 50px
          line-height 50px
          text-align center
          border-right 1px solid #eee
          border-bottom 1px solid #eee
          font-size 24px
          color #666
          &:nth-child(1), &:nth-child(2), &:nth-child(3)
            border-top 1px solid #eee
          &:nth-child(3), &:nth-child(6), &:nth-child(9), &:nth-child(12)
            border-right none
          &:nth-child(10), &:nth-child(11), &:nth-child(12)
            border-bottom none
          &:nth-child(10), &:nth-child(12), &:active
            background-color #d8d8d8
          &:nth-child(12):active
            background-color #fff
          svg
            width 40px
            height 22px
            color #666666
            margin-top 14px
