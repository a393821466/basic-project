@import '~@/assets/styles/mixin.styl'

.footer
  position fixed
  bottom 0
  left 0
  width 100%
  height 49px
  border-top 1px solid #E2E2E2
  z-index 999
  background $centerIconBg
  ul
    display flex
    li
      flex 0 0 20%
      width 20%
      text-align center
      line-height 26px
      padding-top 2px
      font-size $footerFont
      color $basicFooter
      &.home, &.market
        line-height 24px
        p
          width 22px
          height 22px
      &.trade
        color #eee
        .trade_redio
          width 60px
          height 60px
          background $centerIconBg
          border-radius 50%

          position relative
          margin -15px auto 0
          border solid 1px #e6e6e6
          transition all .2s ease
          span
            width 52px
            height 52px
            display block
            border-radius 50%
            margin 4px auto 0
            // position absolute
            // top 50%
            // margin-top -26px
            // left 50%
            // margin-left -26px
            color $centerIconBg
            line-height 30px
            svg
              fill $footerCenter
              padding-top 2px
    .transaction
      width 24%
      flex 0 0 24%
    .footer_icon
      width $iconSize
      height $iconSize
      margin 0 auto
      position relative
      top 4px
      svg
        fill $basicFooter
        transition all .1s ease
    .tradeIcon
      width 25px
      height 25px
    .trade.active
      .trade_redio
        margin-top -20px
