.user_body
  height 100%
  h1
    font-size 18px
    color #fff
    font-weight normal
  .login_view
    margin 130px auto 0
    width 330px
    padding-top 20px
  .username,.password,.submit_login
      margin-bottom 10px
      position relative
      .icons
        width 18px
        height 22px
        display block
        position absolute
        top 50%
        margin-top -10px
        &.icon_User,&.icon_Pwd
          left 18px
          fill #4a4a4a
        &.icon_eye
          width 20px
          height 20px
          left 50%
          margin-left -15px
      label
        display block
        font-size 16px
      input
        height 50px
        border none
        outline none
        font-size 14px
        border-bottom 1px solid #979797
      input[name="user"],input[name="pwd"]
        padding 0 50px 0 45px
        width 235px
        color #666
      input[name="logins"]
        width 100%
        height 55px
        color #fff
        border none
        border-radius 50px
        font-size 15px
    .forget_Pdw
      text-align right
      a
        text-align right
        margin 14px 0px 33px 0
        display inline-block
        color #9B9B9B
    .eyeIcon
      width 50px
      height 50px
      position absolute
      right 0
      top 50%
      margin-top -25px

