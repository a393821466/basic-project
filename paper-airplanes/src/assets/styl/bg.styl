#bg
  width:100%
  height:100%
  position:fixed
  z-index:-1
  left:0
  top:0
  overflow:hidden
  svg 
    display: inline-block
  path, polygon, circle, rect 
    transition: fill 1s ease
  .time,.timeBg
    idth:100%
    height:100%
    transition:all 1s ease
    position:relative
    .mountain, .hill, .land, .trees, .sun, .clouds, .moon, .stars 
      position: absolute
      left: 0
      margin: auto
      right: 0
    .mountain 
      bottom: 2.6rem
      left:-0.13rem
    .hill 
      left:-0.13rem
      bottom: 2.8rem
    .trees 
      bottom:2.5rem
      left:0.4rem
    .sun 
      top: 20rem
      margin-left: -1rem
      transition: all 1s ease
      transform: scale(0.2)
    .moon, .stars 
      top: 1.3rem
      opacity: 0
    .land 
      bottom:0
      left:-0.13rem
      height:4.8rem
    .clouds 
      top: 2rem
      left:20rem
      transition: all 1s ease .1s
  .time.day
    .timeBg
      background:#b4efff
    .sun 
      top: 0.8rem
      margin-left: 0
      transform: scale(1)
      left:1rem
    .clouds 
      left: 1rem
  .time.noon
    .timeBg
      background-image:linear-gradient(top left,#ffd4fb,#ffd377)
    .sun 
      top: 3rem
      left:3rem
      transform: scale(1)
    #sun 
      fill: #ffffda
    #mountain 
      fill: #f1a3a2
    #hill 
      fill: #e09c9c
    #land 
      fill: #c4918d
    .trees 
      fill: #ce791c
    .trunks 
      fill: #8c5f50
  .time.night
    .timeBg
      background:#17387f
    .stars,.moon 
      opacity: 1
      top:2rem;
      left:1rem;
      transition: all 1s ease .5s
    .moon 
      left:50%;
      
      margin-left:-1rem;
    #sky 
      fill: #17377f
    #mountain 
      fill: #73addf
    #hill 
      fill: #659fcd
    #land 
      fill: #508bb5
    .trees 
      fill: #1c2c3b
    .trunks 
      fill: #3f3e3d